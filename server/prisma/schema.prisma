// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Init {
  id   String @id @default(uuid())
  name String @default("prisma")
}

model User {
  id          String   @id @default(uuid())
  fn          String
  ln          String
  // email         String  @unique
  password    String   @default("eplblackjack")
  team        String?
  avatar      String?
  entry       Entry[]
  owned_pools Pool[]
  wins        Int      @default(0)
  losses      Int      @default(0)
  ties        Int      @default(0)
  role        Role     @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Entry {
  id        String   @id @default(uuid())
  season    Int
  league    League
  region    Region
  players   Player[]
  suit      Suit
  goals     Int      @default(0)
  own_goals Int      @default(0)
  net_goals Int      @default(0)
  pool      Pool     @relation(fields: [poolId], references: [id])
  poolId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  winner    Winner   @default(NO)
  standing  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([id, userId])
}

model Player {
  id        Int      @id @unique
  avatar    String?
  fn        String
  ln        String
  club      Club     @relation(fields: [club_id], references: [id])
  club_id   Int
  entry     Entry[]
  goals     Int      @default(0)
  own_goals Int      @default(0)
  net_goals Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pool {
  id        String   @id @default(uuid())
  name      String
  owner     User     @relation(fields: [userId], references: [id])
  userId    String
  entries   Entry[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Club {
  id        Int      @id @unique
  name      String
  logo      String?
  players   Player[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum Winner {
  YES
  NO
}

enum Suit {
  CLUBS
  SPADES
  DIAMONDS
  HEARTS
}

enum Region {
  UK
  CANADA
}

enum League {
  EPL
}
