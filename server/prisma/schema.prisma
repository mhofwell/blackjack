// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Init {
  id   String @id @default(uuid())
  name String @default("prisma")
}

model User {
  id            String  @id @default(uuid())
  fn            String
  ln            String
  // email         String  @unique
  password      String  @default("eplblackjack")
  team          String?
  avatar        String?
  entry         Entry[]
  wins          Int     @default(0)
  losses        Int     @default(0)
  ties          Int     @default(0)
  role          Role    @default(USER)
  currentWinner Winner  @default(NO)
}

model Entry {
  id        String   @id @default(uuid())
  season    Int
  league    League
  pool      Pool
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  players   Player[]
  goals     Int      @default(0)
  own_goals Int      @default(0)
  net_goals Int      @default(0)
  suit      Suit
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, season, league])
}

model Player {
  // id          String  @id @default(uuid())
  id        Int      @id @unique
  avatar    String?
  fn        String
  ln        String
  // team_id   Int
  club      Club     @relation(fields: [club_id], references: [id])
  club_id   Int
  entry     Entry[]
  goals     Int      @default(0)
  own_goals Int      @default(0)
  net_goals Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Club {
  // id          String   @id @default(uuid())
  id      Int      @id @unique
  name    String
  logo    String?
  players Player[]
}

enum Role {
  USER
  ADMIN
}

enum Winner {
  YES
  NO
}

enum Suit {
  CLUBS
  SPADES
  DIAMONDS
  HEARTS
}

enum Pool {
  UK
  CANADA
}

enum League {
  EPL
}
